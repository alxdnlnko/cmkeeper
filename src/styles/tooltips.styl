.tooltip::after
  display inline-block
  content attr(data-tooltip)
  position absolute
  top 110%
  left -50%
  margin-left 25%
  padding 8px 16px
  background-color rgba(0, 0, 0, 0.70)
  color $color-white
  font-size 14px
  line-height 14px
  visibility hidden
  opacity 0
  transform translateY(-4px)

.tooltip-left::after
  right 0
  left inherit
  margin-left 0

.tooltip:hover::after
  visibility visible
  opacity 1
  transform translateY(0)
  transition all ease-in-out .2s .2s
