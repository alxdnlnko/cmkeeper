.form-row
  padding 10px
  text-align center

.form-input
  padding 15px
  width 100%
  color $color-text-light
  font-size 20px
  border-radius 2px
  border 1px solid $color-light-grey-bk
  text-align center

.form-submit
  padding 10px
  width 100%
  height 48px
  font-size 16px
  text-transform uppercase
  border-radius 2px
  border none
  color $color-white
  background-color $color-base
  opacity .8
  transition opacity .5 ease-in-out

  &:not([disabled]):hover
    cursor pointer
    opacity 1

  &[disabled]
    background-color saturation($color-base, 20%)

.auth-form-caption
  margin-bottom 10px
  text-align center
  font-size 20px
  color $color-text-light

.auth-form-error
  padding 10px 0
  color $color-red
  text-align center
  font-weight 400

.signup-form .form-submit
  background-color $color-red

  &[disabled]
    background-color saturation($color-red, 30%)
