.header
  background-color $color-base
  color $color-white
  font-size 24px
  line-height $content-header-height
  z-index $z-index-header
  shadow-1()
  user-select none
  cursor default

.header-action
  height $content-header-height
  width 48px
  line-height $content-header-height !important
  vertical-align middle !important
  text-align center !important
  cursor pointer
  transition background-color ease-in-out .1s

  &:hover
    background-color $color-white-transparent
    cursor pointer

.caption
  padding-left 30px

.caption-item
  display inline-block

.caption-arrow
  padding 0 16px

.caption-notes-preloader
  position relative
  top -2px
  margin-left 16px
  font-size 16px
